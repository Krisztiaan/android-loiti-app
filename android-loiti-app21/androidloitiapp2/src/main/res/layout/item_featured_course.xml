<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp" >

    <hu.artklikk.android.loiti.ui.core.LTextView
        android:id="@+id/item_featured_course_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:textColor="@color/loiti_orange"
        android:textSize="16sp" />

    <hu.artklikk.android.loiti.ui.core.LTextView
        android:id="@+id/item_featured_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/item_featured_course_price"
        android:textColor="@color/loiti_orange"
        android:textSize="16sp" />

</RelativeLayout>