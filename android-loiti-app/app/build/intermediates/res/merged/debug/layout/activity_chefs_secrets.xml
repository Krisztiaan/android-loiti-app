<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loiti_white" >

    <hu.artklikk.android.loiti.ui.core.LTextView
        android:id="@+id/activity_chefs_secrets_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_size"
        android:layout_marginBottom="10dp"
        android:padding="@dimen/header_left_padding"
        android:text="@string/chefs_secrets_header"
        android:textColor="@color/loiti_orange"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/activity_chefs_secrets_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_chefs_secrets_header"
        android:background="@color/loiti_white" />

</RelativeLayout>
