<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/item_alacarte_sub_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <hu.artklikk.android.loiti.ui.core.LTextView
        android:id="@+id/item_alacarte_sub_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:textColor="@color/loiti_orange"
        android:textSize="16sp"
        android:textStyle="bold" />

    <hu.artklikk.android.loiti.ui.core.LTextView
        android:id="@+id/item_alacarte_sub_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_alacarte_sub_name"
        android:paddingLeft="16dp"
        android:paddingTop="2dp"
        android:textColor="@color/loiti_gray"
        android:textSize="16sp" />

    <hu.artklikk.android.loiti.ui.view.Stripes
        android:id="@+id/item_alacarte_sub_stripes"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="20%"
        app:orientation="up"
        app:stripeColor="@color/loiti_white_semitransparent"
        app:stripeSize="8dp" />

    <hu.artklikk.android.loiti.ui.core.LTextView
        android:id="@+id/item_alacarte_sub_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_alacarte_sub_stripes"
        android:layout_alignTop="@id/item_alacarte_sub_stripes"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textColor="@color/loiti_gray"
        android:textSize="20sp"
        android:textStyle="bold" />

</android.support.percent.PercentRelativeLayout>
